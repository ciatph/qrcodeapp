<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_default"
    android:layout_marginRight="@dimen/padding_default"
    android:layout_marginTop="@dimen/padding_default"
    android:orientation="vertical">

    <EditText
        android:id="@+id/view_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_results"
        android:background="@drawable/edittext_bg_fine"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_edit_box"
        android:paddingLeft="@dimen/padding_edit_box"
        android:paddingRight="@dimen/padding_edit_box"
        android:paddingTop="@dimen/padding_edit_box"
        android:text="@string/hint_gps"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_large"></EditText>

    <Button
        android:id="@+id/content_button_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
</LinearLayout>