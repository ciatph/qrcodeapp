<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_default"
    android:paddingRight="@dimen/padding_default">

    <TextView
        android:id="@+id/view_item_label"
        style="@style/label_normal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Header"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/view_item_content"
        style="@style/textarea_add"
        android:background="@drawable/edittext_bg_fine"
        android:clickable="false"
        android:focusable="false"
        android:text="test"
        android:layout_below="@+id/label_formatted_tag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent" />

</LinearLayout>