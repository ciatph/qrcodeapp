<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_item_label"
        style="@style/label_normal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default"
        android:text="Item Header"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/view_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default"
        android:height="?attr/actionBarSize"
        android:background="@drawable/edittext_bg_fine"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingBottom="@dimen/padding_edit_box"
        android:paddingEnd="@dimen/padding_edit_box"
        android:paddingLeft="@dimen/padding_edit_box"
        android:paddingStart="@dimen/padding_edit_box"
        android:paddingTop="@dimen/padding_edit_box"
        android:text="Hello"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/transparent"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>