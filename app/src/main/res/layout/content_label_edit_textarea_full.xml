<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_tree_remarks_view_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/view_item_label"
        style="@style/label_normal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Header"
        android:textStyle="bold"
        android:visibility="gone" />

    <EditText
        android:id="@+id/view_item_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.49"
        android:background="@drawable/edittext_bg_fine"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="40"
        android:minLines="40"
        android:paddingBottom="@dimen/padding_edit_box_dp"
        android:paddingLeft="@dimen/padding_edit_box_dp"
        android:paddingRight="@dimen/padding_edit_box_dp"
        android:paddingTop="@dimen/padding_edit_box_dp"
        android:scrollbars="vertical"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>