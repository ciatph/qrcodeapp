<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="label_normal_padding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_uniform</item>
        <item name="android:paddingTop">@dimen/padding_edit_box</item>
    </style>

    <style name="textarea_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_large</item>
        <item name="android:background">@drawable/edittext_bg_fine</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">4</item>
        <item name="android:minLines">4</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">top</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">#757575</item>
        <item name="android:paddingLeft">@dimen/padding_edit_box</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="label_small_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_large</item>
    </style>

    <style name="title_main_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="buttons_main">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/buttons</item>
    </style>

    <style name="ButtonsMeta" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonsFlat" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="title_sub_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
